[core]
    autocrlf = false
    eol = lf
    filemode = false
    ignorecase = true
    excludesfile = ~/.gitignore_global
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = true
[alias]
    co = checkout
    ci = commit
    st = status -sb
    br = branch -a
    lg = log --decorate
    ll = log --oneline --all --graph --decorate
    today = log --since yesterday
    wd = diff --word-diff
    difff = diff HEAD
    purr = pull --rebase --prune
    unstash = stash pop
    ready = diff --check
[include]
    path = ~/.gitconfig_private
[push]
    default = simple
